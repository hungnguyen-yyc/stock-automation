<Page x:Class="Stock.UI.Components.MainScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Stock.UI.Components"
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
      xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainScreen">
    <Grid Margin="0,0,0,0">
        <Grid.Resources>
            <ResourceDictionary>
                <Style TargetType="Line" x:Key="lineStyle">
                    <Setter Property="StrokeThickness" Value="0"/>
                </Style>

                <DataTemplate x:Key="headerTemplate1">
                    <TextBlock Text="Year 2020" Padding="0,5,0,3" FontSize="14"/>
                </DataTemplate>

                <DataTemplate x:Key="headerTemplate2">
                    <TextBlock Text="Index Price" Padding="0,3,0,1" FontSize="14"/>
                </DataTemplate>
            </ResourceDictionary>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <syncfusion:ComboBoxAdv 
            Name="CmbTimeframe" 
            AllowMultiSelect="False" 
            Grid.Column="0" 
            Grid.Row="0" 
            DefaultText="ComboBox Items" 
            Height="30" Width="150" 
            Margin="5 5 5 0"
            ItemsSource="{Binding Timeframes}"
            SelectedItem="{Binding SelectedTimeframe, Mode=TwoWay}"/>
        <syncfusion:ComboBoxAdv 
            Name="CmbTicker" 
            AllowMultiSelect="False" 
            Grid.Column="0" Grid.Row="1" 
            DefaultText="ComboBox Items" 
            Height="30" Width="150" Margin="5 5 5 0"
            ItemsSource="{Binding Tickers}"
            SelectedItem="{Binding SelectedTicker, Mode=TwoWay}"/>
        <syncfusion:ComboBoxAdv Name="CmbStrategy" AllowMultiSelect="False" Grid.Column="0" Grid.Row="2" DefaultText="ComboBox Items" Height="30" Width="150" Margin="5 5 5 0"/>
        <ListView Name="LsvOrders" Grid.Column="0" Grid.Row="3" Height="auto" d:ItemsSource="{d:SampleData ItemCount=5}" VerticalAlignment="Stretch" Margin="5 10 5 0">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <chart:SfChart Grid.Column="1" Grid.Row="0" Grid.RowSpan="4" RenderTransformOrigin="0.5,0.5" Background="Transparent">
            <chart:SfChart.PrimaryAxis>
                <chart:DateTimeAxis ShowGridLines="False" LabelFormat="MMM-dd" PlotOffsetEnd="10" ZoomFactor="0.4"
                   AxisLineStyle="{StaticResource lineStyle}" HeaderTemplate="{StaticResource headerTemplate1}" EdgeLabelsDrawingMode="Shift" EdgeLabelsVisibilityMode="Visible">
                    <chart:DateTimeAxis.LabelStyle>
                        <chart:LabelStyle FontSize="12.5"/>
                    </chart:DateTimeAxis.LabelStyle>
                </chart:DateTimeAxis>
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis Interval="10" LabelFormat="$0" AxisLineStyle="{StaticResource lineStyle}" HeaderTemplate="{StaticResource headerTemplate2}">
                    <chart:NumericalAxis.LabelStyle>
                        <chart:LabelStyle FontSize="12.5"/>
                    </chart:NumericalAxis.LabelStyle>
                </chart:NumericalAxis>
            </chart:SfChart.SecondaryAxis>

            <chart:SfChart.Behaviors>
                <chart:ChartZoomPanBehavior ZoomMode="X" ResetOnDoubleTap="False"/>
            </chart:SfChart.Behaviors>
            
            <chart:CandleSeries Name="series" ItemsSource="{Binding Prices}"
                XBindingPath="Date"
                High="High" Open="Open"  
                Close="Close" Low="Low"
                Interior="#4A4A4A"
                ShowTooltip="True"
                EnableAnimation="False"/>
        </chart:SfChart>
    </Grid>
</Page>
